<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Magic Prawns</title>

    <!-- Reset CSS -->
    <link rel="stylesheet" type="text/css" href="/assets/css/reset.css">

    <!-- Bootstrap core CSS -->
    <link href="/assets/ext/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts -->
    <link href="/assets/ext/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Crafty+Girls|Delius+Unicase|Faster+One|Freckle+Face|Nova+Oval|Ruslan+Display" rel="stylesheet">

    <!-- Custom styles -->
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css" />

</head>
<body>

    <div class = "site-content-container">

        <header>
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="/">Magic Prawns</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li {{#if allTabisActive}} class="active" {{/if}}><a href="/"><i class="fa fa-cutlery fa-lg" aria-hidden="true"></i>&nbsp; All</a></li>
                    <li {{#if featuredTabisActive}} class="active" {{/if}}><a href="/featured"><i class="fa fa-fire fa-lg" aria-hidden="true"></i>&nbsp; Featured</a></li>
                    <li {{#if savedTabisActive}} class="active" {{/if}}><a href="/saved"><i class="fa fa-bookmark fa-lg" aria-hidden="true"></i>&nbsp; Saved</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" id = "new" data-toggle = "modal" data-target="#createForm"><i class="fa fa-plus fa-lg" aria-hidden="true"></i>&nbsp; New</a></li>
                    <li><a href="/login" id = "login">Login</a></li>
                  </ul>
                </div><!--/.nav-collapse -->
              </div>
            </nav>
        </header>

        <main>
            <div class="masthead">
                <div class = "masthead-content-visible container">
                {{#if allTabisActive}}
                    <h1><strong>All Crumbs</strong></h1>
                    <h2>Explore photos, experiences, and more from previous crumbs</h2>
                 {{/if}}
                 {{#if featuredTabisActive}}
                    <h1><strong>Trending today!</strong></h1>

                 {{/if}}
                 {{#if savedTabisActive}}
                    <h1><strong>Saved Crumbs</strong></h1>
                    <h2>Explore photos, experiences, and more from previous crumbs</h2>
                 {{/if}}
                 {{#unless featuredTabisActive}}
                    <form class="navbar-form" role="search">
                        <i class="fa fa-search fa-lg" aria-hidden="true"></i>
                        <input type="text" name="search" placeholder="Search for..">
                    </form>
                 {{/unless}}
                </div>
            </div>
            <div class = "block-items">
                <!--User grids -->
                {{{body}}}
            </div>
        </main>

    </div> <!--site-content-container-->

    <!--Login Modal-->
    <div class="modal fade" id = "loginModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Login to Magic Prawns</h4>
              </div>
              <div class="modal-body">
                <!-- content goes here -->
                <form>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" name = "useremail" id="useremail" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>
                     <button type="submit" class="btn btn-primary">Login</button>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- Create New Crumb Modal -->
    <div class="modal fade" id = "createForm" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Crumb</h4>
          </div>
          <div class="modal-body">
              <form id="newCrumb-form">
                  <div class="form-group">
                    <label for="Restaurant">Restaurant</label>
                    <input type="text" class="form-control" id="restaurant" placeholder="Find Restaurant">
                  </div>
                  <div class="form-group">
                    <label for="zipcode">Zipcode</label>
                    <input type="text" pattern="[0-9]{5}" class="form-control" id="zipcode" placeholder="Near">
                  </div>
                  <div class="form-group">
                    <label for="dish">Dish</label>
                    <input type="text" class="form-control" id="dish" placeholder="Dish or Drink">
                  </div>
                  <div class="form-group">
                    <label for="rating">Rating</label>
                      <select id = "rating" class="form-control">
                          <option value="1">1 NAY!</option>
                          <option value="2">2</option>
                          <option value = "3">3 MEH!</option>
                          <option value = "4">4</option>
                          <option value = "5">5 YAY!</option>
                    </select>
                </div>
                
                  <label class="checkbox-inline">
                  <input type="checkbox" id="salty" value="salty"> Salty
                    </label>
                    <label class="checkbox-inline">
                      <input type="checkbox" id="spicy" value="spicy"> Spicy
                    </label>
                    <label class="checkbox-inline">
                      <input type="checkbox" id="sweet" value="sweet"> Sweet
                    </label>
                   <div class="form-group">
                <label for="comment">Comment:</label>
                 <textarea class="form-control" rows="3" id="comment"></textarea>
                </div>
                    <div class="form-group">
                    <label for="exampleInputFile">File input</label>
                    <input type="file" id="exampleInputFile">
                    <p class="help-block">Example block-level help text here.</p>
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
          </div><!-- /.modal-body-->
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-muted"><span class="copyright">Copyright &copy; MagicPrawns 2017</span></p>
                </div>
            </div>
        </div>
    </footer> <!-- ./footer-->
    
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/assets/ext/bootstrap/js/bootstrap.min.js"></script>

    <!-- Custom Script-->
    <script type="text/javascript" src="/assets/javascript/app.js"></script>
</body>
</html>